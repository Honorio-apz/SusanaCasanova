---
import Card from "@components/card.astro";
import Container from "@components/container.astro";
import Review from "@components/review.astro";


const testimonials = [
  {
    Titulo: "Guía comparativa sobre las principales aplicaciones de delivery",
    gif_voceria: "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNmZsZHo3dzZwZXhlYjFwcm9pNGczMWxuMDFhdnpjYm0yNzl3aTR3NyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/S6ZRnyQwo7wmLVHatS/giphy-downsized-large.gif",
    Descripcion: "Reportaje de #CiudadanosalCentro acerca de las aplicaciones de delivery más usadas, además te presentamos una guía comparativa realizada por el Indecopi sobre los principales servicios de entrega a domicilio.",
    url: "www.youtube.com"
  },
  {
    Titulo: "Entrevista radial: Representante de la Dirección de la Autoridad Nacional de Protección del Consumidor del Indecopi.",
    gif_voceria: "https://i.postimg.cc/pr3m2ndG/radio-indicopi.gif",
    Descripcion: "Comparativo de aplicativos móviles de deliveryConoce el comparativo de aplicativos móviles de delivery - La Fuerza de Consumidor.",
    url: "https://www.facebook.com/IndecopiOficial/videos/795360358550058"
  },
  {
    Titulo: "Activista cultural",
    gif_voceria: "https://i.postimg.cc/VLn0LdBp/caporales-su.gif",
    Descripcion: "Astroship has revolutionized the way we handle customer support. The ticketing system and knowledge base have significantly reduced response times, leading to happier customers. Thanks to this incredible tool.",
    url: "www.youtube.com"
  },
  {
    Titulo: "Entrevista radial: La Fuerza del Consumidor en el día del Amor y la Amistad",
    gif_voceria: "https://i.postimg.cc/MpPwkJrH/san-valentin-su.gif",
    Descripcion: "Recomendaciones de consumo para el Día del Amor y la Amistad. Entrevista a Susana Casanova, representante de la Dirección de la Autoridad Nacional de Protección del Consumidor del Indecopi.",
    url: "https://www.youtube.com/watch?v=1mN8xnootZA"
  },
  {
    Titulo: "Centro especial de monitoreo del Indecopi Escucha activa a la ciudadanía",
    gif_voceria: "https://i.postimg.cc/dVSbHmLT/CEMI-SU.gif",
    Descripcion: "Expositora de Encuesta Nacional del Indecopi-Centro especial de monitoreo del Indecopi Escucha activa a la ciudadanía.",
    url: "https://www.youtube.com/watch?v=3G8hBxSHCl0&t=249s"
  }
];
---

<Container>
  <div class="mt-24">
    <h2 class="text-2xl lg:text-3xl font-bold lg:tracking-tight text-center">
      Actividades de <span class="text-indigo-600">entrevistas y difusiones</span>
    </h2>
    <p class="text-lg mt-4 text-slate-600 text-center">
      Explora mi colección de videos que capturan momentos clave, demostraciones y conocimientos valiosos.
    </p>
  </div>
</Container>

<div class="mt-10 relative overflow-x-clip">
  <div class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-100 right-1/3 -top-10"> </div>
  <div class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-100 right-1/3 translate-x-2/3 top-10"></div>
  <div class="relative md:flex gap-10 overflow-hidden py-5 group">
    <div class="md:motion-safe:animate-marquee w-auto py-5 overflow-x-auto flex flex-nowrap min-w-full shrink-0 items-stretch gap-10 snap-x snap-mandatory px-5">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
    <!--  ↓↓ Shadow DOM to make the animation smooth (clone) ↓↓ -->
    <div class="md:motion-safe:animate-marquee hidden md:motion-reduce:hidden md:flex min-w-full shrink-0 items-center gap-10">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
  </div>
</div>

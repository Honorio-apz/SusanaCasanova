---
import Card from "@components/card.astro";
import Container from "@components/container.astro";
import Review from "@components/review.astro";


const testimonials = [
  {
    Titulo: "Voceria de Indecopi",
    gif_voceria: "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNmZsZHo3dzZwZXhlYjFwcm9pNGczMWxuMDFhdnpjYm0yNzl3aTR3NyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/S6ZRnyQwo7wmLVHatS/giphy-downsized-large.gif",
    Descripcion: "Astroship has transformed the way we manage our projects. Its well-designed interface and powerful features make it a must-have tool for any startup. We've seen a great increase in our productivity and collaboration.",
  },
  {
    Titulo: "Eduacion superior de calidad",
    gif_voceria: "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNmZsZHo3dzZwZXhlYjFwcm9pNGczMWxuMDFhdnpjYm0yNzl3aTR3NyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/S6ZRnyQwo7wmLVHatS/giphy-downsized-large.gif",
    Descripcion: "As a marketing professional, I love using Astroship to streamline our marketing campaigns. The automation features and data analytics help us make data-driven decisions and optimize our business strategies. ",
  },
  {
    Titulo: "Activista cultural",
    gif_voceria: "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNmZsZHo3dzZwZXhlYjFwcm9pNGczMWxuMDFhdnpjYm0yNzl3aTR3NyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/S6ZRnyQwo7wmLVHatS/giphy-downsized-large.gif",
    Descripcion: "Astroship has revolutionized the way we handle customer support. The ticketing system and knowledge base have significantly reduced response times, leading to happier customers. Thanks to this incredible tool.",
  },
  {
    Titulo: "Organizacion de eventos",
    gif_voceria: "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNmZsZHo3dzZwZXhlYjFwcm9pNGczMWxuMDFhdnpjYm0yNzl3aTR3NyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/S6ZRnyQwo7wmLVHatS/giphy-downsized-large.gif",
    Descripcion: "Astroship has simplified our employee management processes. From onboarding to performance evaluations, everything is now seamlessly organized in one place. It's made my job much more manageable and enjoyable!",
  }
];
---

<Container>
  <div class="mt-24">
    <h2 class="text-2xl lg:text-3xl font-bold lg:tracking-tight text-center">
      Actividades <span class="text-gray-600">Importantes</span>
    </h2>
    <p class="text-lg mt-4 text-slate-600 text-center">
      Astroship is trusted by the world's leading companies and brands.
    </p>
  </div>
</Container>

<div class="mt-10 relative overflow-x-clip">
  <div class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-100 right-1/3 -top-10"> </div>
  <div class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-100 right-1/3 translate-x-2/3 top-10"></div>
  <div class="relative md:flex gap-10 overflow-hidden py-5 group">
    <div class="md:motion-safe:animate-marquee w-auto py-5 overflow-x-auto flex flex-nowrap min-w-full shrink-0 items-stretch gap-10 snap-x snap-mandatory px-5">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
    <!--  ↓↓ Shadow DOM to make the animation smooth (clone) ↓↓ -->
    <div class="md:motion-safe:animate-marquee hidden md:motion-reduce:hidden md:flex min-w-full shrink-0 items-center gap-10">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
  </div>
</div>
